<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sinc1"
    android:orientation="vertical" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:columnCount="5"
        android:orientation="horizontal"
        android:rowCount="3" >

        <Button
            android:id="@+id/buttonmapa"
            style="@drawable/shape"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_row="0"
            android:background="@drawable/iconomapa"
            android:minEms="5"
            android:text="@string/BotonMapa"
            android:textColor="#3366CC"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonservicios"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_marginRight="80dp"
            android:layout_marginTop="100dp"
            android:layout_row="0"
            android:background="@drawable/iconoservicios"
            android:text="Servicios"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonRuta"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_marginBottom="150dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_row="2"
            android:background="@drawable/iconoruta"
            android:lines="1"
            android:text="Nueva ruta"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonLista"
            style="@drawable/shape"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_marginBottom="150dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="100dp"
            android:layout_row="2"
            android:background="@drawable/iconolugares"
            android:maxEms="6"
            android:text="Lugares almacenados"
            android:textColor="#3366CC"
            android:textSize="22sp"
            android:textStyle="bold" />
        
    </GridLayout>

</LinearLayout>
