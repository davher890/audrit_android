<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <TextView
        android:id="@+id/TextViewCode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#00000000"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:textColor="#FFFFFF"
        android:textSize="90sp" />
	
	<GridLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_margin="10dp"
	    android:layout_weight="1"
	    android:columnCount="4"
	    android:rowCount="6" >
	
	    <Button
	        android:id="@+id/ButtonA"
	        android:layout_width="wrap_content"
	        android:layout_column="0"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="1"
	        android:background="@drawable/boton_reposo_letra_a"
	        android:scaleType="fitCenter" />
	
	    <Button
	        android:id="@+id/Button7"
	        android:layout_column="1"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="1"
	        android:background="@drawable/boton_reposo_num_7" />
	
	    <Button
	        android:id="@+id/Button8"
	        android:layout_column="2"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="1"
	        android:background="@drawable/boton_reposo_num_8" />
	
	    <Button
	        android:id="@+id/Button9"
	        android:layout_column="3"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="1"
	        android:background="@drawable/boton_reposo_num_9" />
	
	    <Button
	        android:id="@+id/ButtonB"
	        android:layout_column="0"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="2"
	        android:background="@drawable/boton_reposo_letra_b" />
	
	    <Button
	        android:id="@+id/Button4"
	        android:layout_column="1"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="2"
	        android:background="@drawable/boton_reposo_num_4" />
	
	    <Button
	        android:id="@+id/Button5"
	        android:layout_column="2"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="2"
	        android:background="@drawable/boton_reposo_num_5" />
	
	    <Button
	        android:id="@+id/Button6"
	        android:layout_column="3"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="2"
	        android:background="@drawable/boton_reposo_num_6" />
	
	    <Button
	        android:id="@+id/ButtonC"
	        android:layout_column="0"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="3"
	        android:background="@drawable/boton_reposo_letra_c" />
	
	    <Button
	        android:id="@+id/Button1"
	        android:layout_column="1"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="3"
	        android:background="@drawable/boton_reposo_num_1" />
	
	    <Button
	        android:id="@+id/Button2"
	        android:layout_column="2"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="3"
	        android:background="@drawable/boton_reposo_num_2" />
	
	    <Button
	        android:id="@+id/Button3"
	        android:layout_column="3"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="3"
	        android:background="@drawable/boton_reposo_num_3" />
	
	    <Button
	        android:id="@+id/ButtonD"
	        android:layout_column="0"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="4"
	        android:background="@drawable/boton_reposo_letra_d" />
	
	    <Button
	        android:id="@+id/Button0"
	        android:layout_column="1"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="4"
	        android:background="@drawable/boton_reposo_num_0" />
	
	    <Button
	        android:id="@+id/ButtonINTRO"
	        android:layout_column="2"
	        android:layout_columnSpan="2"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="4"
	        android:layout_rowSpan="2"
	        android:background="@drawable/boton_reposo_enviar" />
	
	    <Button
	        android:id="@+id/ButtonE"
	        android:layout_column="0"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="5"
	        android:background="@drawable/boton_reposo_letra_e" />
	
	    <Button
	        android:id="@+id/ButtonDEL"
	        android:layout_column="1"
	        android:layout_gravity="fill"
	        android:layout_margin="2dp"
	        android:layout_row="5"
	        android:background="@drawable/boton_reposo_atras" />
	
	</GridLayout>
</LinearLayout>